   "source": [
    "n, m, k = map(int, input().split())\n",
    "\n",
    "ans = 0\n",
    "for i in range(k + 1):\n",
    "    girls = n - i\n",
    "    boys = m - (k - i)\n",
    "\n",
    "    ans = max(ans, min(girls//2, boys))\n",
    "print(ans)"
   ]
